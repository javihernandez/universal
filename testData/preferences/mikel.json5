// # Mikel
//
// The preference sets the following Windows 10 mouse and keyboard features:
//  - Mouse: Pointer size     -> Disabled
//  - Mouse: Mousekeys on/off -> Disabled

//  - Keyboard: Sticky keys on/off -> Enabled
//  - Keyboard: Filter keys on/off -> Enabled
{
    "flat": {
        "name": "Mikel",
        "contexts": {
            "gpii-default": {
                "name": "Default preferences",
                "preferences": {
                    "http://registry.gpii.net/common/cursorSize": 0.9,
                    "http://registry.gpii.net/common/cursorSpeed": 0.5,
                    // TODO: Fix the fact that"initDelay" and "cursorAcceleration" should be explicitly
                    // definded because if not SPI call will fail at the "get" payload comparison.
                    "http://registry.gpii.net/common/mouseEmulation/enabled": true,
                    "http://registry.gpii.net/common/initDelay": 1,
                    "http://registry.gpii.net/common/cursorAcceleration": 1,

                    "http://registry.gpii.net/common/stickyKeys": true,
                    "http://registry.gpii.net/common/debounce/enabled": true
                }
            }
        }
    }
}